<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>
  
  <% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <% end %>
  
 <div class="field">
  <label for"book_title">Title</label>
  <%= f.text_field :title %>
 </div>
 
 <div class="field">
  <label for"book_body">Body</label>
  <%= f.text_area :body %>
 </div>
 <div class="submit">
  <%= f.submit 'Update Book' %>
 </div>
  
 <div class="action">
  <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", "/books" %>
 </div>
 
<% end %>